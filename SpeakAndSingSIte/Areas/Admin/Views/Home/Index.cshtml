@model DataManager
@{ 
    string strTilte = "Панель Администратора";
    ViewBag.Title = strTilte;
}
    <div>
        <h1>@strTilte</h1>
        <div>
            <h4>Услуги</h4>
            <div class="div-box">
                <a class="btn btn-info" asp-area="Admin" asp-controller="ServiceItems" asp-action="Edit" asp-route-id="">Добавить услугу</a>
            </div>
            @if (Model.ServiceItems.GetServiceItems().Count() != 0)
            {
                <div>
                    @foreach (ServiceItem entity in Model.ServiceItems.GetServiceItems())
                    {
                        <div>
                            <a asp-area="Admin" asp-controller="ServiceItems" asp-action="Edit" asp-route-id="@entity.Id">Редактировать</a>
                            |
                            <form style="display: inline-block;" id="form-@entity.Id" asp-area="Admin" asp-controller="ServiceItems" asp-action="Delete" method="post">
                                <input type="hidden" name="id" value="@entity.Id">
                                <a href="#" onclick="document.getElementById('form-@entity.Id').submit();">Удалить</a>
                            </form>
                            |
                            <a asp-area="" asp-controller="Services" asp-action="Index" asp-route-id="@entity.Id">
                                @($"{entity.Title}")
                            </a>
                        </div>
                    }
                </div>
            }
        </div>
        <div>
            <h4>Преподаватели</h4>
            <div class="div-box">
                <a class="btn btn-info" asp-area="Admin" asp-controller="Teachers" asp-action="Edit" asp-route-id="">Добавить преподавателя</a>
            </div>
            @if (Model.Teachers.GetTeachers().Count() != 0)
            {
                <div>
                    @foreach (Teacher entity in Model.Teachers.GetTeachers())
                    {
                        <div>
                            <a asp-area="Admin" asp-controller="Teachers" asp-action="Edit" asp-route-id="@entity.Id">Редактировать запись преподаватель</a>
                            |
                            <form style="display: inline-block;" id="form-@entity.Id" asp-area="Admin" asp-controller="Teachers" asp-action="Delete" method="post">
                                <input type="hidden" name="id" value="@entity.Id">
                                <a href="#" onclick="document.getElementById('form-@entity.Id').submit();">Удалить</a>
                            </form>
                            |
                            <a asp-area="" asp-controller="Teachers" asp-action="Index" asp-route-id="@entity.Id">
                                @($"{entity.Title}")
                            </a>
                        </div>
                    }
                </div>
            }
        </div>
        <div class="div-box">
            <h4>Редактировать страницы сайта</h4>
            <a class="btn btn-info" asp-area="Admin" asp-controller="TextFilds" asp-action="Edit" asp-route-codeWord="PageIndex">Главная</a>
            <a class="btn btn-info" asp-area="" asp-controller="Teacher" asp-action="Index" asp-route-id="">Наши Преподаватели</a>
            <a class="btn btn-info" asp-area="Admin" asp-controller="TextFilds" asp-action="Edit" asp-route-codeWord="PageServices">Наши услуги</a>
            <a class="btn btn-info" asp-area="Admin" asp-controller="TextFilds" asp-action="Edit" asp-route-codeWord="PageContacts">Контакты</a>
        </div>
        <div class="div-box">
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                <input type="submit" value="Выйти" />
            </form>
        </div>
    </div>