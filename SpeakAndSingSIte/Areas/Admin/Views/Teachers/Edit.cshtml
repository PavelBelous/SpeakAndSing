@model Teacher
@{
    string strTitle = "Редактировать запись";
    ViewBag.Title = strTitle;
}

<cache>
    <script src="~/lib/tinymce/tinymce.min.js"></script>
</cache>

<div >
    <h2>@strTitle</h2>
    <div>
        <form asp-area="Admin" asp-controller="Teachers" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateAdded" />
            <input type="hidden" asp-for="ImagePath" />

            <div asp-validation-summary="All"></div>

            <div class="div-box">
                <label asp-for="lastName"></label>
                <input asp-for="lastName" />
                <span asp-validation-for="lastName"></span>
            </div>
            <div class="div-box">
                <label asp-for="firstName"></label>
                <input asp-for="firstName" />
                <span asp-validation-for="firstName"></span>
            </div>
            <div class="div-box">
                <label asp-for="patronymic"></label>
                <input asp-for="patronymic" />
                <span asp-validation-for="patronymic"></span>
            </div>

            <div class="div-box">
                <label asp-for="Text"></label>
                <textarea asp-for="Text"></textarea>
                <span asp-validation-for="Text"></span>
            </div>
            <div class="div-box">
                <label asp-for="ImagePath"></label>
                <input type="file" name="titleImageFile" id="titleImageFile" />
                <div>
                    <img class="img-block" src="~/images/@Model.ImagePath" />
                </div>
            </div>
            <div class="div-box">
                <label asp-for="MetaTitle"></label>
                <input asp-for="MetaTitle" />
                <span asp-validation-for="MetaTitle"></span>
            </div>
            <div class="div-box">
                <label asp-for="MetaDescription"></label>
                <input asp-for="MetaDescription" />
                <span asp-validation-for="MetaDescription"></span>
            </div>
            <div class="div-box">
                <label asp-for="MetaKeyword"></label>
                <input asp-for="MetaKeyword" />
                <span asp-validation-for="MetaKeyword"></span>
            </div>
            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>

<script>
    tinymce.init({
        selector: 'textarea'
    });
</script>